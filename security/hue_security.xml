<!-- MIGRATION (Odoo 11â†’12): Added security groups -->
<odoo>
    <!-- HUE Module User Group -->
    <record id="group_hue_user" model="res.groups">
        <field name="name">HUE User</field>
        <field name="comment">User group for HUE Customization module basic access</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- HUE Academic Administrator Group -->
    <record id="group_hue_academic_admin" model="res.groups">
        <field name="name">HUE Academic Administrator</field>
        <field name="comment">Administrator for academic year management and invoicing</field>
        <field name="implied_ids" eval="[(4, ref('group_hue_user'))]"/>
    </record>

    <!-- Record-level security rules can be added here (future) -->
</odoo>