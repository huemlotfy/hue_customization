<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ldap_student_directory_tree" model="ir.ui.view">
        <field name="name">MC LDAP Directory</field>
        <field name="model">student.ldap.directory</field>
        <field name="arch" type="xml">
            <tree string="LDAP Directory">
				<field name="name"/>
                <field name="ldap_server"/>
                <field name="ldap_port"/>
                <field name="ldap_base_dn"/>
            </tree>
        </field>
    </record>

    <record id="ldap_student_directory_form" model="ir.ui.view">
        <field name="name">MC LDAP Directory</field>
        <field name="model">student.ldap.directory</field>
        <field name="arch" type="xml">
            
            <form string="LDAP Directory">
                <sheet>
                    <group>
						<field name="name"/>
                        <field name="ldap_server"/>
                        <field name="ldap_port"/>
                        <field name="ldap_base_dn"/>
                        <field name="username"/>
                        <field name="password" password="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
	
    <record model="ir.ui.view" id="view_student_ldap_kanban">
        <field name="name">MC LDAP Directory</field>
        <field name="model">student.ldap.directory</field>
        <field name="arch" type="xml">
            <kanban class="student_ldap_kanban">
						<field name="name"/>
                        <field name="ldap_server"/>
                        <field name="ldap_port"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_res_partner_kanban">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings" style="text-align:center !important;">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <ul style="text-align:center !important;">
                                    <li t-if="record.ldap_server.raw_value">
                                        Server: <field name="ldap_server"/>
                                    </li>
                                    <li t-if="record.ldap_port.raw_value">
                                        Port: <field name="ldap_port"/>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    
	<record id="student_ldap_directory_action" model="ir.actions.act_window">
        <field name="name">Student LDAP Directory</field>
        <field name="res_model">student.ldap.directory</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <!--<field name="search_view_id" ref="ldap_directory_view_filter" />-->
    </record>

	 
    <menuitem id="student_ldap_directory_menu_id"
			  name="HUE LDAP Directory"
			  action="student_ldap_directory_action"
			  parent="openeducat_core.menu_op_school_main"
			  sequence="2"/>
	
</odoo>