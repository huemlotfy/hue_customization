<?xml version="1.0"?>
<odoo>

    <!-- HUE Faculties Views -->
    <record id="view_hue_faculties_tree" model="ir.ui.view">
        <field name="name">hue.faculties.tree</field>
        <field name="model">hue.faculties</field>
        <field name="arch" type="xml">
            <tree string="Faculties">
                <field name="name"/>
                <field name="identifier"/>
                <field name="d_id"/>
            </tree>
        </field>
    </record>

    <record id="view_hue_faculties_form" model="ir.ui.view">
        <field name="name">hue.faculties.form</field>
        <field name="model">hue.faculties</field>
        <field name="arch" type="xml">
            <form string="Faculty">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="identifier"/>
                        <field name="d_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_hue_faculties" model="ir.actions.act_window">
        <field name="name">HUE Faculties</field>
        <field name="res_model">hue.faculties</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_hue_faculties_levels" model="ir.actions.act_window">
        <field name="name">HUE Faculties Levels</field>
        <field name="res_model">hue.faculties.levels</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_hue_years" model="ir.actions.act_window">
